<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/sarlavha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sarlavha"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/batafsil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="batafsil"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/oxirgi_muddat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="oxirgi_muddat"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/zarurlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zarurlik"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/bajarildi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="bajarildi"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/sana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sana"
        android:visibility="gone"
        android:textSize="20sp" />



    <Button
        android:id="@+id/btn_cansel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>